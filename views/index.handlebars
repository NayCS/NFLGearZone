<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <link rel="stylesheet" href="/styles/styles.css" />
        <h1>Gear Zone</h1>
        <form class="clearfix mb-4">
          <div class="form-group">
            <div class="card">
              <div class="card-header">
                Enter Your Info &amp; Subscribe Below!
              </div>
              <div class="card-body">
                <form role="form" method="POST" action="/person/new">
                  <div class="form-group">
                    <labels for="fname">First Name</label>
                      <input type="text" class="form-control" id="firstname">
                  </div>
                  <div class="form-group">
                    <label for="lname">Last Name</label>
                    <input type="text" class="form-control" id="lastname">
                  </div>
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email">
                  </div>
                  <div class="d-flex justify-content-between">
                    <div class="form-group">
                      <label id="street" for="str">Street</label>
                      <input type="text" class="form-control" id="address">
                    </div>
                    <div class="form-group">
                      <label id="city" for="city">City &amp; State</label>
                      <input type="text" class="form-control" id="address">
                    </div>
                    <div class="form-group">
                      <label id="zip" for="zip">Zip</label>
                      <input type="text" class="form-control" id="address">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="team">Enter Your Favorite Team</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                      <option></option>
                      {{#each Team}}
                      <option value="{{this.id}}">{{this.title}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <input id="submit" type="submit" class="btn btn-primary submit" value="Subscribe">
                </form>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/js/index.js"></script>